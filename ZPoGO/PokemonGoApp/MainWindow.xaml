<Window x:Class="PokemonGoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pokémon Names" Height="350" Width="800">

    <Grid>
        <DataGrid x:Name="PokemonDataGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="番号" Binding="{Binding DexNr}" Width="*"/>
                <DataGridTextColumn Header="ポケモン名" Binding="{Binding JapaneseName}" Width="*"/>
                <DataGridTextColumn Header="英名" Binding="{Binding EnglishName}" Width="*"/>
                <DataGridTextColumn Header="タイプ" Binding="{Binding Types}" Width="*"/>
                <DataGridTextColumn Header="種族値" Binding="{Binding Stats}" Width="*"/>
                <DataGridTemplateColumn Header="写真" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding iconImage}" Width="50" Height="50"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="写真(色違い)" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding iconShinyImage}" Width="50" Height="50"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
